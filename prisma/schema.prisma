generator client {
  provider = "prisma-client-js"
//   output   = "../generated/prisma"    estava incorreto (isso foi geardo automaticamente pelo prisma)
}

datasource db {
  provider = "sqlite"
  url      = "file:../dev.db"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String?
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  images    Image[]   
  likes     Like[]    
}

model Image {
  id        Int       @id @default(autoincrement())
  title     String
  filename  String
  createdAt DateTime  @default(now())
  description String?

  userId    Int?
  user      User?     @relation(fields: [userId], references: [id])

  likes     Like[]    
}

model Like {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())

  userId    Int
  imageId   Int

  user      User      @relation(fields: [userId], references: [id])
  image     Image     @relation(fields: [imageId], references: [id])

  @@unique([userId, imageId])
}